 #! /bin/bash
### BEGIN INIT INFO
# Provides: dlstats
# Required-Start:
# Should-Start:
# Required-Stop:
# Should-Stop:
# Default-Start:  3 5
# Default-Stop:   0 1 2 6
# Short-Description: dlstats daemon
# Description:    Update the mongoDB collections for dlstats
### END INIT INFO

case "$1" in
  start)
    echo "Starting server"
    # Start the daemon
    python3 /usr/local/bin/dlstats-daemon.py start
    ;;
  stop)
    echo "Stopping server"
    # Stop the daemon
    python3 /usr/local/bin/dlstats-daemon.py stop
    ;;
  restart)
    echo "Restarting server"
    python3 /usr/local/bin/dlstats-daemon.py restart
    ;;
  *)
    # Refuse to do other stuff
    echo "Usage: /etc/init.d/dlstats {start|stop|restart}"
    exit 1
    ;;
esac

exit 0
